{
  "name": "nexo-serverless-workspace",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @nexo/admin dev",
    "dev:admin": "pnpm --filter @nexo/admin dev",
    "dev:codex": "pnpm --filter @nexo/codex dev",
    "dev:all": "node scripts/dev.mjs",
    "build": "pnpm --filter @nexo/utils build && pnpm --filter @nexo/api build && pnpm --filter @nexo/admin build",
    "build:admin": "pnpm --filter @nexo/admin build",
    "build:codex": "pnpm --filter @nexo/codex build",
    "build:runtime": "cd runtime && cargo build --release",
    "preview:admin": "pnpm --filter @nexo/admin preview",
    "preview:codex": "pnpm --filter @nexo/codex preview",
    "lint": "pnpm -r --filter @nexo/* run lint",
    "test": "pnpm -r --filter @nexo/* run test"
  }
}
